<%# Task title %>
<h1><%= @task['title'] %></h1>

<%# Edit task %>
<div class="edit-item">
    <%= link_to('Edit this task', edit_task_path(@task['id'])) %>
</div>

<%# Task details %>
<p><%= @task['details'] %></p>

<%# Task completed checkbox %>
<div class='task-complete'>
    <input type='checkbox' id='complete' <%= @task['completed'] ? 'checked' : '' %> >
    <label for="complete">This task is <%= @task['completed'] ? '' : 'not ' %>complete</label>
</div>

<%# Return to index %>
<%= link_to('Back to list', tasks_path) %>